<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color4"
    tools:context=".Register">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New User ?"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="45dp"
        android:fontFamily="cursive"
        android:textColor="@android:color/holo_red_dark"/>

</LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/logo"
        android:padding="15dp"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/register_username"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:drawableStart="@drawable/ic_account_foreground"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:paddingTop="20dp"
            android:paddingStart="0dp"/>

        <EditText
            android:id="@+id/register_password"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:ems="10"
            android:hint="password"
            android:drawableStart="@drawable/ic_password_foreground"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:paddingStart="0dp"/>
        <EditText
            android:id="@+id/register_email"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:hint="email"
            android:drawableStart="@drawable/ic_email_foreground"
            android:paddingStart="0dp"/>
        <EditText
            android:id="@+id/register_DOB"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:drawableStart="@drawable/ic_date_foreground"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:paddingTop="20dp"
            android:hint="D.O.B"
            android:paddingStart="0dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_register"
            android:text="Register"
            android:textColor="@android:color/white"
            android:background="@color/color2"
            android:layout_marginTop="30dp"
            android:onClick="registerOnClick"/>



    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="137dp"
        android:layout_height="101dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@drawable/logo2"
        android:paddingBottom="20dp" />

</RelativeLayout>